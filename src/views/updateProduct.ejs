<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>

<div class="page-heading">

    <h1>Update product</h1>

</div>

<form action="/products/update" method="POST" enctype="multipart/form-data">

    <div class="control-group">

        <div class="form-group floating-label-form-group controls">

            <label>Id</label>

            <input type="hidden" class="form-control" id="id" name="id" value="<%=product.id%>">

        </div>

    </div>

    <div class="control-group">

        <div class="form-group floating-label-form-group controls">

            <label>Name</label>

            <input type="text" class="form-control" id="name" name="name" value="<%=product.name%>" >

        </div>

    </div>

    <div class="control-group">

        <div class="form-group floating-label-form-group controls">

            <label>Price</label>

            <input type="text" class="form-control" id="price" name="price" value="<%=product.price%>">

        </div>

    </div>

    <div class="control-group">

        <div class="form-group floating-label-form-group controls">

            <label>Producer</label>

            <input type="text" class="form-control" id="producer" name="producer" value="<%=product.producer%>">

        </div>

    </div>

    <div class="control-group">

        <div class="form-group floating-label-form-group controls">

            <label>Avatar</label>

            <input type="text" class="form-control" id="avatar" name="avatar" value="<%=product.avatar%>">

        </div>

    </div>


    <div class="form-group">

        <button type="submit" class="btn btn-primary" >Update</button></div>

</form>

</body>
</html>